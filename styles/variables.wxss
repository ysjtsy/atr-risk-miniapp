page {
  /* 背景色 */
  --bg-body: #020617;
  --bg-card: #020617;
  --bg-cardElevated-start: #111827;
  --bg-cardElevated-end: #020617;

  /* 边框 */
  --border-subtle: #1f2937;
  --border-strong: #30363d;

  /* 文本 */
  --text-primary: #e5e7eb;
  --text-secondary: #9ca3af;
  --text-muted: #6b7280;

  /* 状态色 */
  --primary-gradient-start: #2563eb;
  --primary-gradient-end: #7c3aed;
  --state-long: #10b981;
  --state-short: #ef4444;
  --state-warning: #fbbf24;

  /* 价格颜色 */
  --price-up: #22c55e;
  --price-down: #ef4444;

  /* 错误提示 */
  --error-bg: rgba(239, 68, 68, 0.08);
  --error-border: rgba(239, 68, 68, 0.4);
  --error-text: #fecaca;

  /* 圆角 */
  --radius-lg: 18rpx;
  --radius-md: 14rpx;
  --radius-full: 999rpx;

  /* 字号 */
  --font-title: 32rpx;
  --font-label: 26rpx;
  --font-body: 28rpx;
  --font-small: 24rpx;
  --font-number: 30rpx;
}
