/* ========= 全局：浅色科技风 ========= */

/* 页面整体背景 & 字体 */
page {
  background-color: #F3F4F6;      /* 浅灰背景 */
  color: #111827;
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto;
}

/* 主容器：宽度居中，留左右空白 */
.container {
  padding: 32rpx 24rpx 40rpx;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  max-width: 680rpx;
  margin: 0 auto;
}

/* ========= 通用区块（Section） ========= */

.section {
  padding: 12rpx 0 8rpx;
  border-bottom: 1px solid #E5E7EB;   /* 只用底部分割线 */
}

.section:last-child {
  border-bottom: none;
}

/* 标题 / 副标题 */
.label {
  font-size: 26rpx;
  font-weight: 600;
  color: #111827;
  margin-bottom: 8rpx;
}

.sub-label {
  font-size: 24rpx;
  color: #6B7280;
  margin-top: 10rpx;
  margin-bottom: 4rpx;
}

/* 输入框 & Picker */
input,
.picker {
  border: 1px solid #D1D5DB;
  background-color: #F9FAFB;
  border-radius: 10rpx;
  padding: 12rpx 14rpx;
  font-size: 28rpx;
  color: #111827;
}

.picker {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

/* ========= 按钮 ========= */

/* 主操作按钮 */
.btn {
  margin-top: 12rpx;
  padding: 22rpx 0;
  border-radius: 14rpx;
  background: linear-gradient(135deg, #3B82F6, #6366F1);
  color: #FFFFFF;
  font-size: 30rpx;
  font-weight: 600;
  text-align: center;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(37, 99, 235, 0.25);
}

/* 小按钮（刷新价格） */
.mini-btn {
  padding: 10rpx 22rpx;
  border-radius: 999rpx;
  font-size: 24rpx;
  border: 1px solid #D1D5DB;
  background-color: #FFFFFF;
  color: #111827;
}

/* ========= 价格卡片区域 ========= */

.price-grid {
  margin-top: 8rpx;
  border-radius: 16rpx;
  background-color: #FFFFFF;
  padding: 16rpx 18rpx;
  border: 1px solid #E5E7EB;
  box-shadow: 0 6rpx 18rpx rgba(15, 23, 42, 0.06);
}

.price-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 8rpx;
}

.price-item:last-child {
  margin-bottom: 0;
}

.price-title {
  font-size: 26rpx;
  color: #6B7280;
}

.price-value {
  font-size: 26rpx;
  font-weight: 600;
  color: #111827;
}

/* 价差颜色 */
.price-up {
  color: #16A34A;
}

.price-down {
  color: #DC2626;
}

/* 刷新按钮所在区域 */
.price-actions {
  margin-top: 16rpx;
  display: flex;
  justify-content: center;
}

/* ========= 结果卡片（交易计划） ========= */

.result-card-wrapper {
  position: relative;
  margin-top: 16rpx;
}

/* 左侧细条表示多/空方向 */
.direction-strip {
  position: absolute;
  left: 0;
  top: 0;
  width: 8rpx;
  height: 100%;
  border-radius: 8rpx;
}

/* 多单：绿色条 */
.strip-long {
  background-color: rgba(34, 197, 94, 0.85);
}

/* 空单：红色条 */
.strip-short {
  background-color: rgba(239, 68, 68, 0.85);
}

/* 卡片主体 */
.result-card {
  padding: 22rpx 22rpx 22rpx 30rpx;
  border-radius: 18rpx;
  background-color: #FFFFFF;
  border: 1px solid #E5E7EB;
  box-shadow: 0 8rpx 20rpx rgba(15, 23, 42, 0.08);
}

/* 头部标签行 */
.result-header {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
  margin-bottom: 16rpx;
}

.tag {
  padding: 4rpx 12rpx;
  border-radius: 999rpx;
  font-size: 22rpx;
  border: 1px solid #D1D5DB;
}

.tag-symbol {
  color: #111827;
}

.tag-interval {
  color: #4B5563;
}

.tag-direction {
  color: #0F766E;
  background-color: #ECFEFF;
  border-color: #67E8F9;
}

/* 结果行 */
.result-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.result-label {
  font-size: 24rpx;
  color: #6B7280;
}

.result-value {
  font-size: 26rpx;
  font-weight: 600;
  color: #111827;
}

.result-value-strong {
  font-size: 28rpx;
  font-weight: 700;
  color: #2563EB;
}

/* 分割线 */
.result-divider {
  margin: 14rpx 0;
  height: 1rpx;
  background-color: #E5E7EB;
}

/* ========= 错误提示 ========= */

.error {
  margin-top: 24rpx;
  padding: 18rpx 20rpx;
  border-radius: 14rpx;
  background-color: #FEE2E2;
  border: 1px solid #FCA5A5;
  color: #B91C1C;
  font-size: 24rpx;
}
